<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Apply for New Ration Card</title>
  <link rel="stylesheet" href="/apply.css">
</head>
<body>
  <div class="form-container">
    <h1>Apply for New Ration Card</h1>
    <form action="submit_application.html" method="POST" class="ration-form">
      <!-- Personal Details Section -->
      <fieldset>
        <legend>Personal Details</legend>
        <div class="input-group">
          <label for="name">Full Name</label>
          <input type="text" id="name" name="name" placeholder="Enter your full name" required>
        </div>
        <div class="input-group">
          <label for="dob">Date of Birth</label>
          <input type="date" id="dob" name="dob" required>
        </div>
        <div class="input-group">
          <label for="gender">Gender</label>
          <select id="gender" name="gender" required>
            <option value="" disabled selected>Select your gender</option>
            <option value="male">Male</option>
            <option value="female">Female</option>
            <option value="other">Other</option>
          </select>
        </div>
        <div class="input-group">
          <label for="phone">Phone Number</label>
          <input type="tel" id="phone" name="phone" placeholder="Enter your phone number" required>
        </div>
        <div class="input-group">
          <label for="email">Email Address</label>
          <input type="email" id="email" name="email" placeholder="Enter your email address">
        </div>
      </fieldset>

      <!-- Address Section -->
      <fieldset>
        <legend>Address Details</legend>
        <div class="input-group">
          <label for="address">Full Address</label>
          <textarea id="address" name="address" placeholder="Enter your full address" required></textarea>
        </div>
        <div class="input-group">
          <label for="state">State</label>
          <input type="text" id="state" name="state" placeholder="Enter your state" required>
        </div>
        <div class="input-group">
          <label for="city">City</label>
          <input type="text" id="city" name="city" placeholder="Enter your city" required>
        </div>
        <div class="input-group">
          <label for="pincode">Pincode</label>
          <input type="number" id="pincode" name="pincode" placeholder="Enter your pincode" required>
        </div>
      </fieldset>

      <!-- Family Details Section -->
      <fieldset>
        <legend>Family Details</legend>
        <div class="input-group">
          <label for="family_members">Number of Family Members</label>
          <input type="number" id="family_members" name="family_members" placeholder="Enter total family members" required>
        </div>
        <div class="input-group">
          <label for="income">Annual Family Income</label>
          <input type="number" id="income" name="income" placeholder="Enter family income (in INR)" required>
        </div>
      </fieldset>

      <!-- Upload Documents -->
      <fieldset>
        <legend>Upload Documents</legend>
        <div class="input-group">
          <label for="proof">Identity Proof (Aadhaar, PAN, etc.)</label>
          <input type="file" id="proof" name="proof" accept=".jpg, .jpeg, .png, .pdf" required>
        </div>
        <div class="input-group">
          <label for="photo">Passport Size Photograph</label>
          <input type="file" id="photo" name="photo" accept=".jpg, .jpeg, .png" required>
        </div>
      </fieldset>

      <!-- Submit Button -->
      <button type="submit" class="submit-btn">Submit Application</button>
    </form>
  </div>
</body>
</html>
